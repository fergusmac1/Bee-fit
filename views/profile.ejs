<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Build Routine</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Exercise Name</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>

              <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                  <a class="navbar-brand" href="#">Exercise</a>
                  <button class="navbar-toggler" type="btn-group" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                      <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Upper Body
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                          <li><a class="dropdown-item" href="#">Bench Press</a></li>
                          <li><a class="dropdown-item" href="#">Dumbell Press</a></li>
                          <li><a class="dropdown-item" href="#">Dumbell Flyes</a></li>
                          <li><a class="dropdown-item" href="#">Incline Dumbell Press</a></li>
                          <li><a class="dropdown-item" href="#">Barbell Overhead Press</a></li>
                          <li><a class="dropdown-item" href="#">Pullup</a></li>
                          <li><a class="dropdown-item" href="#">Chest Supported Row</a></li>
                          <li><a class="dropdown-item" href="#">Dumbell Lateral Raise</a></li>
                          <li><a class="dropdown-item" href="#">Barbell Row</a></li>
                          <li><a class="dropdown-item" href="#">One Arm Row</a></li>
                          <li><a class="dropdown-item" href="#">Shoulder Press</a></li>
                          <li><a class="dropdown-item" href="#">Arnold Press</a></li>
                          <li><a class="dropdown-item" href="#">Lat Pulldown</a></li>
                          <li><a class="dropdown-item" href="#">Pushup</a></li>
                        </ul>
                      </li>
                    </ul>
                  </div>
                  <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                    <ul class="navbar-nav">
                      <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Lower Body
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                          <li><a class="dropdown-item" href="#">Back Squat</a></li>
                          <li><a class="dropdown-item" href="#">Deadlift</a></li>
                          <li><a class="dropdown-item" href="#">Hip Thrust</a></li>
                          <li><a class="dropdown-item" href="#">Leg Extension</a></li>
                          <li><a class="dropdown-item" href="#">Prone Leg Curl</a></li>
                          <li><a class="dropdown-item" href="#">Walking Lunge</a></li>
                          <li><a class="dropdown-item" href="#">Bulgarian Split Squat</a></li>
                          <li><a class="dropdown-item" href="#">Hamstring March</a></li>
                          <li><a class="dropdown-item" href="#">Goblet Squat</a></li>
                          <li><a class="dropdown-item" href="#">Calf Raise</a></li>
                        </ul>
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                  <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Arms
                      </a>
                      <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </div>
              </nav>

              <div class="mb-3">
                <label for="set1" class="form-label">1</label>
                <input type="text" class="form-control" id="set1" name="set1">
            </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>